{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2017",
      "es2017.object",
      "es2018.promise",
      "esnext.asynciterable"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2020"
  },
  "exclude": ["node_modules", "dist"]
}
