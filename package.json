    "rollup-plugin-cleaner": "1.0.0",
    "rollup-plugin-dts": "4.2.2",
    "sinon": "14.0.0",
    "standard-version": "9.5.0",
    "ts-loader": "9.3.0",
    "typescript": "4.7.2",
    "util": "0.12.4",
    "webpack": "5.72.1"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
