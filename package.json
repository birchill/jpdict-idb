  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "homepage": "https://github.com/birchill/jpdict-idb#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
