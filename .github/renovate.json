{
  "extends": ["config:base", ":dependencyDashboard", ":pinOnlyDevDependencies"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "addLabels": ["dev"]
    }
  ]
}
